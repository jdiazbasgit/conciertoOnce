<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="tambor" class="concierto.instrumentos.Instrumento"><!-- Instrumento tambor = new Instrumento() -->
<property name="instrumentoBean" ref="instrumentoBean"></property> <!-- tambor.setInstrumentoBean(InstrumentoBean) -->
</bean>

<bean class="concierto.beans.InstrumentoBean" id="instrumentoBean"><!-- InstrumentoBean tambor = new InstrumentoBean() -->

	<property name="sonido" value="pom, pom, pom, en xml"></property>
	
</bean>
 <bean class="concierto.musicos.Solista" id="solista"> <!-- Solista solista = new Solista() -->
    <property name="instrumentoInterface" ref="tambor"></property>  <!-- Solista.setInstrumento -->
 
 </bean>

</beans>
